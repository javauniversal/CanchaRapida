<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zonaapp.co.cancharapida">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.ActMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ActRegistrarse"
            android:label="@string/title_activity_act_registrarse"
            android:parentActivityName=".Activities.ActMain"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="zonaapp.co.cancharapida.Activities.ActMain" />
        </activity>
        <activity
            android:name=".Activities.ActMenu"
            android:label="@string/title_activity_act_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ActReservas"
            android:label="@string/title_activity_act_reservas"
            android:parentActivityName=".Activities.ActMenu"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="zonaapp.co.cancharapida.Activities.ActMenu" />
        </activity>
        <activity
            android:name=".Activities.ActMisReservas"
            android:label="@string/title_activity_act_mis_reservas"
            android:parentActivityName=".Activities.ActMenu"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="zonaapp.co.cancharapida.Activities.ActMenu" />
        </activity>
        <activity
            android:name=".Activities.ActNoticias"
            android:label="@string/title_activity_act_noticias"
            android:parentActivityName=".Activities.ActMenu"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="zonaapp.co.cancharapida.Activities.ActMenu" />
        </activity>
    </application>

</manifest>
